algoritmo "Vetores"

var
Nomes : vetor[1..5] de literal
pesquisa : literal
i, sucesso : inteiro
encontrado : logico
inicio

para i de 1 ate 5 faca
         Escreval("Informe seu nome por gentileza, para cadastrar no sistema")
         leia(Nomes[i])
fimpara
limpatela

Escreval("Informe um nome para pesquisar")
leia(pesquisa)

sucesso <- 0

para i de 1 ate 5 faca
       se nomes[i] = pesquisa entao
          sucesso <- 1
       fimse
fimpara

se sucesso = 1 entao
    Escreval("Cliente encontrado")
senao
    Escreval("Cliente nÃ£o encontrado")
fimse
fimalgoritmo
